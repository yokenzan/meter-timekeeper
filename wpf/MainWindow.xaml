<Window x:Class="RemainingTimeMeter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="残り時間メーター" Height="350" Width="400"
        WindowStartupLocation="CenterScreen"
        Icon="tv_timekeeper_trimmed.ico">
    <Grid Background="{StaticResource BackgroundBrush}">
        <StackPanel Style="{StaticResource MainContainerStyle}">
            <TextBlock Text="残り時間メーター" 
                       Style="{StaticResource HeaderTextBlockStyle}" 
                       Margin="0,0,0,20"/>

            <StackPanel Style="{StaticResource FormStackPanelStyle}">
                <TextBlock Text="時間設定: " 
                           Style="{StaticResource LabelTextBlockStyle}" 
                           Margin="0,0,10,0"/>
                <TextBox x:Name="MinutesTextBox" 
                         Text="5" 
                         Style="{StaticResource NumericTextBoxStyle}"
                         GotFocus="TextBox_GotFocus" 
                         PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown"/>
                <TextBlock Text="分" 
                           Style="{StaticResource LabelTextBlockStyle}" 
                           Margin="5,0,5,0"/>
                <TextBox x:Name="SecondsTextBox" 
                         Text="00" 
                         Style="{StaticResource NumericTextBoxStyle}"
                         GotFocus="TextBox_GotFocus" 
                         PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown"/>
                <TextBlock Text="秒" 
                           Style="{StaticResource LabelTextBlockStyle}" 
                           Margin="5,0,0,0"/>
            </StackPanel>

            <StackPanel Style="{StaticResource FormStackPanelStyle}">
                <TextBlock Text="表示ディスプレー: " 
                           Style="{StaticResource LabelTextBlockStyle}" 
                           Margin="0,0,10,0"/>
                <ComboBox x:Name="DisplayComboBox" 
                          Width="200" 
                          SelectedIndex="0"/>
            </StackPanel>

            <StackPanel Style="{StaticResource FormStackPanelStyle}">
                <TextBlock Text="配置位置: " 
                           Style="{StaticResource LabelTextBlockStyle}" 
                           Margin="0,0,10,0"/>
                <ComboBox x:Name="PositionComboBox" 
                          Width="100" 
                          SelectedIndex="0">
                    <ComboBoxItem Content="右端"/>
                    <ComboBoxItem Content="左端"/>
                    <ComboBoxItem Content="上端"/>
                    <ComboBoxItem Content="下端"/>
                </ComboBox>
            </StackPanel>

            <Button x:Name="StartButton" 
                    Content="開始" 
                    Width="100"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="StartButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 