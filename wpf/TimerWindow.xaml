<Window x:Class="RemainingTimeMeter.TimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:RemainingTimeMeter.Properties"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Timer" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Icon="tv_timekeeper_trimmed.ico"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave">

    <Grid>
        <!-- タイマーバー -->
        <materialDesign:Card x:Name="TimerBorder" 
                            Background="{DynamicResource MaterialDesignDarkBackground}" 
                            Padding="4"
                            UniformCornerRadius="8">

            <!-- 進捗バー -->
            <Grid>
                <ProgressBar x:Name="ProgressBar" 
                           Background="Transparent"
                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                           BorderThickness="0"
                           Height="12"
                           VerticalAlignment="Center"
                           Style="{StaticResource MaterialDesignLinearProgressBar}"/>
            </Grid>
        </materialDesign:Card>

        <!-- コントロールパネル（ホバー時に表示） -->
        <materialDesign:Card x:Name="ControlPanel" 
                            Background="{DynamicResource MaterialDesignPaper}" 
                            Padding="16"
                            UniformCornerRadius="8"
                            Visibility="Collapsed">

            <StackPanel>
                <TextBlock x:Name="TimeDisplay" 
                          Text="5:00" 
                          FontSize="20" 
                          FontWeight="Medium" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,16"
                          Foreground="{DynamicResource MaterialDesignBody}"/>

                <StackPanel HorizontalAlignment="Center">
                    <Button x:Name="PauseResumeButton" 
                            Content="{Binding Source={x:Static properties:Resources.Pause}}" 
                            Width="100" 
                            Height="36" 
                            Margin="0,0,0,8"
                            Click="PauseResumeButton_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>

                    <Button x:Name="StopButton" 
                            Content="{Binding Source={x:Static properties:Resources.Stop}}" 
                            Width="100" 
                            Height="36" 
                            Margin="0,0,0,0"
                            Click="StopButton_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window> 