<Window x:Class="SeekbarTimer.TimeSetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="時間設定"
        Height="150"
        Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="タイマー時間を分で入力してください:" FontSize="12"/>
        
        <TextBox Grid.Row="2" Name="MinutesTextBox" FontSize="14" Height="25" Text="5"/>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="OkButton" Content="OK" Width="70" Height="25" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Name="CancelButton" Content="キャンセル" Width="70" Height="25" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>